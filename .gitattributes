# Default for all
* text=auto diff=auto
# Markdown
*.md diff=markdown eol=crlf
# Code & Scripts
*.sh diff=sh eol=lf
*.java diff=java eol=lf
# Windows files
*.bat           text eol=crlf
# Git attributes
.gitignore text eol=lf
.gitattributes text eol=lf
/.idea export-ignore
/.github export-ignore
/modules export-ignore
CHANGELOG.md export-ignore
*.jar filter=lfs diff=lfs merge=lfs -text
*.gradle filter=lfs diff=lfs merge=lfs -text
*.properties filter=lfs diff=lfs merge=lfs -text
